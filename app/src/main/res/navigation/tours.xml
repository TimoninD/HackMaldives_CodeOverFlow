<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tours"
    app:startDestination="@id/toursFragment">
    <fragment
        android:id="@+id/toursFragment"
        android:name="ru.codeoverflow.junctionhack.ui.fragment.tours.ToursFragment">
        <action
            android:id="@+id/action_toursFragment_to_detailTourFragment"
            app:destination="@id/detailTourFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailTourFragment"
        android:name="ru.codeoverflow.junctionhack.ui.fragment.detailtour.DetailTourFragment">

        <argument
            android:name="tourId"
            app:argType="string" />
    </fragment>

</navigation>