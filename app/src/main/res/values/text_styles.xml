<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseRegular">
        <item name="android:fontFamily">@font/monsterrat_regular</item>
    </style>

    <style name="BaseBold">
        <item name="android:fontFamily">@font/monsterrat_bold</item>
    </style>

    <style name="BaseSemiBold">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="BaseExtraBold">
        <item name="android:fontFamily">@font/monsterrat_extrabold</item>
    </style>

    <style name="TitleText" parent="BaseExtraBold">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="HintText" parent="BaseRegular">
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SubTitleText" parent="BaseExtraBold">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LabelText" parent="BaseRegular">
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewSize14TitleBold" parent="BaseBold">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewSize12Hint" parent="HintText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewSize18Hint" parent="HintText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewSize18BlackRegular" parent="BaseRegular">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewSize18TitleBold" parent="BaseBold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="TextViewSize18Black50Regular" parent="BaseRegular">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_50</item>
    </style>


    <style name="TextViewSize12MainRegular" parent="BaseRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="TextViewSize11TitleBold" parent="BaseBold">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="TextViewSize18MainBold" parent="BaseBold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>
    <style name="TextViewSize18WhiteRegular" parent="BaseRegular">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewSize29WhiteBold" parent="BaseBold">
        <item name="android:textSize">29sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewSize10MainRegular" parent="BaseRegular">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="TextViewSize16TitleRegular" parent="BaseRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="TextViewSize16WhiteSemiBold" parent="BaseSemiBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewSize13TitleBold" parent="BaseBold">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/title_color</item>
