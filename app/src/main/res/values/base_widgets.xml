<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseEditText" parent="Widget.AppCompat.EditText">
        <!--<item name="hintTextColor">@color/second_text_color</item>
        <item name="android:fontFamily">@font/graphik_medium</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:fontFamily">@font/monsterrat_regular</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">24dp</item>
        <!--<item name="android:textColor">@color/blue_113</item>-->
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_button_app</item>
        <item name="android:textAllCaps">false</item>
        <!--<item name="android:textColor">@drawable/color_button_text</item>-->
        <item name="cornerRadius">9dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/monsterrat_bold</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <!--<item name="android:fontFamily">@font/graphik_medium</item>-->
    </style>

    <style name="RatingBarMain">
        <item name="android:progressDrawable">@drawable/ic_rating_main</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:minHeight">15dp</item>
    </style>

    <style name="RatingBarWhite">
        <item name="android:progressDrawable">@drawable/ic_rating_white</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
    </style>
</resources>